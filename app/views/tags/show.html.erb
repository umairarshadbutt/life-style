<h1>Articles Suggested with <%= @tag.name %></h1>
<div class="row" >
    <% @tag.articles.each do |article| %>
    <div class="col-sm-3">
      <div class="card" >
        <img class="card-img-top" style=" width: 100%; " src="<%= article.image %>" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
        </div>
      </div>
    </div>
  <%end%>
</div>
